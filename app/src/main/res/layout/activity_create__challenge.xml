<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Challenge.Create_ChallengeActivity">

<!--    상단 앱바-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/weather_bar_shape">

        <ImageView
                android:id="@+id/createChallenge_back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back_arrow"
                android:layout_marginLeft="20dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 챌린지"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

<!--    챌린지 내용 레이아웃-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:padding="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
<!--            챌린지 제목-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="챌린지 제목"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
            
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/challenge_title_edit_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="제목 입력..."
                    android:textSize="14dp"
                    android:background="@null">
                
            </com.google.android.material.textfield.TextInputEditText>
            
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/mainGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

            </LinearLayout>
<!--            챌린지 내용-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="챌린지 내용"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/challenge_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="내용 입력..."
                    android:textSize="14dp"
                    android:background="@null">

            </com.google.android.material.textfield.TextInputEditText>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/mainGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

            </LinearLayout>
<!--            기간 설정-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기간"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                    <Spinner
                            android:id="@+id/period_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:entries="@array/spinner_entries"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center">

                    <TextView
                            android:id="@+id/current_month_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="월 "
                            android:textSize="16dp"/>
                    <TextView
                            android:id="@+id/current_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"
                            android:textSize="16dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="~"
                            android:textSize="16dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"/>

                    <TextView
                            android:id="@+id/target_month_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="월 "
                            android:textSize="16dp"/>
                    <TextView
                            android:id="@+id/target_date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일"
                            android:textSize="16dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/mainGray"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

            </LinearLayout>
<!--            품종 설정-->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="품종"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                    <Spinner
                            android:id="@+id/breed_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:entries="@array/spinner_entries2"
                            android:layout_gravity="center_vertical"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                    <TextView
                            android:id="@+id/create_challenge_breed_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="품종"
                            android:textSize="16dp"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/mainGray"
                    android:layout_marginTop="5dp">

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center">

        <Button
                android:id="@+id/createChallenge_complete_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_shape"
                android:text="완료"
                android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>