<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.LoginActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBlue">

        <LinearLayout
                android:id="@+id/appName_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="100dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="워킹멍"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나랑 산책하개"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/login_img_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/appName_layout"
                android:layout_marginTop="50dp">

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/splash_icon">
            </ImageView>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/email_signUp_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_above="@+id/kakao_signUp_layout"
                android:layout_marginBottom="15dp">

            <Button
                    android:id="@+id/email_signUp_btn"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:text="이메일로 가입하기"
                    android:background="@drawable/emailbutton"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/kakao_signUp_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_above="@+id/google_signUp_layout"
                android:layout_marginBottom="15dp">
            <Button
                    android:id="@+id/kakao_signUp_btn"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:text="카카오톡으로 가입하기"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/kakaobutton"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/google_signUp_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp">
            <Button
                    android:id="@+id/google_signUp_btn"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:text="구글로 가입하기"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/googlebutton"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>