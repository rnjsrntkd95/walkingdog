<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyChallengeActivity"
        android:orientation="vertical">
<!--    상단 앱바-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/weather_bar_shape">

        <ImageView
                android:id="@+id/myChallenge_back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/back_arrow"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/white"/>

        <TextView
                android:id="@+id/myChallengeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참여 중인 챌린지"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:fontFamily="@font/maplestory_bold"/>
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!--순위 레이아웃-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:background="@drawable/tenradius_shape"
                    android:backgroundTint="@color/mainGray"
                    android:layout_margin="10dp"
                    android:elevation="20dp">
                <!--                2등 레이아웃-->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center">

                    <ImageView
                            android:id="@+id/silverMedal"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/trophy2"
                            />
                    <TextView
                            android:id="@+id/secondPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2등 닉네임"
                            android:fontFamily="@font/maplestory_light"/>
                </LinearLayout>
<!--                1등 레이아웃-->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center">

                    <ImageView
                            android:id="@+id/goldMedal"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/trophy1"/>
                    <TextView
                            android:id="@+id/firstPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1등 닉네임"
                            android:fontFamily="@font/maplestory_light"/>

                </LinearLayout>

<!--                3등 레이아웃-->
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center">
                    <ImageView
                            android:id="@+id/bronzeMedal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/trophy3"/>
                    <TextView
                            android:id="@+id/thirdPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3등 닉네임"
                            android:fontFamily="@font/maplestory_light"/>
                </LinearLayout>
            </LinearLayout>
<!--             내기록 레이아웃-->
            <LinearLayout
                    android:id="@+id/myRecordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@drawable/tenradius_shape"
                    android:backgroundTint="#F18C8C"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:elevation="20dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 기록"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:fontFamily="@font/maplestory_light"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="순위"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                        <TextView
                                android:id="@+id/rankingFigureTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="수치"
                                android:fontFamily="@font/maplestory_light"/>

                    </LinearLayout>
                    <!--                내 산책횟수 레이아웃-->
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="산책 횟수"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                        <TextView
                                android:id="@+id/walkingFigureTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="산책 횟수 수치 "
                                android:fontFamily="@font/maplestory_light"/>

                    </LinearLayout>
                    <!--                    내 산책 충족량 레이아웃-->
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="산책 충족량"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                        <TextView
                                android:id="@+id/satisfiedQuantityFigureTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="충족량 수치"
                                android:fontFamily="@font/maplestory_light"/>
                    </LinearLayout>
                    <!--                    내 점수 레이아웃-->
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="점수"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                        <TextView
                                android:id="@+id/scoreFigureTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="점수 수치"
                                android:fontFamily="@font/maplestory_light"/>

                    </LinearLayout>

                </LinearLayout>
<!--                 내 순위 레이아웃-->
            </LinearLayout>
<!--            전체 참여자 순위 리스트-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/tenradius_shape"
                        android:backgroundTint="@color/mainGray">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="참여자 기록 정보"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="@font/maplestory_light"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="순위"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="닉네임"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="산책 횟수"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="산책 충족량"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="점수"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/maplestory_light"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="400dp">

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/participatedChallengeListRecyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center">

                <Button
                        android:id="@+id/cancelChallenge"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/tenradius_shape"
                        android:backgroundTint="@color/green1"
                        android:text="취소하기"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/maplestory_light"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    
</LinearLayout>