<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Post.FeedFragment"
        android:background="@color/mainGray">

    <RelativeLayout
            android:id="@+id/feed_top_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/mainGray">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/filter_icon"/>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피드"
                android:textSize="20dp"
                android:layout_centerInParent="true"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">

            <ImageView
                    android:id="@+id/writeBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/write_icon"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:id="@+id/feed_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/feed_top_layout"
            android:background="@drawable/feedpagecustom">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feed_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</RelativeLayout>